{
  "compilerOptions": {
      "lib": [
          "es2015"
      ],
      "target": "es6",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./lib",
      "strict": true,
      "noUnusedLocals": true,
      "pretty": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "resolveJsonModule": true,
      "types": [
          "reflect-metadata", "node"
      ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "tests/**/*.ts"],
  "typeRoots": [
      "../node_modules/@types/index.d.ts"
  ]
}
